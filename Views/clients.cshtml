@{
  Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No clients have been added yet.</p>
}
else
{
  <h1>Client List</h1>
  <ul>
    @foreach(var client in Model)
    {
      <li><a href="/clients/@client.GetId()">@client.GetName()</a> | | <a href="/client/edit/@client.GetId()">Edit</a></li>
    }
  </ul>
  <form action="/clients/delete" method="post">
    <button type="submit">Clear all clients</button>
  </form>
}
<a href="/clients/new">Add a new client</a>
<p><a href="/">Return home</a></p>
