@{
  Layout="Shared/_Layout.cshtml";
}
<h1>Hair Salon</h1>
<hr />
<h2>Edit category: @Model.GetName()</h2>
<form action="/stylist/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="stylist-id" type="hidden" value="@Model.GetId()">
  <div class="form-group">
    <label for="stylist-availability">Stylist availability</label>
    <input class="form-control" id="stylist-availability" name="stylist-availability" type="text">
  </div>
  <div class="form-group">
    <label for="stylist-services">Stylist services</label>
    <input class="form-control" id="stylist-services" name="stylist-services" type="text">
  </div>
  <button class="button" type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
