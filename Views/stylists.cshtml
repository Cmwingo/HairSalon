@{
  Layout="Shared/_Layout.cshtml";
}
<h1>All Stylists</h1>
@if (@Model.Count == 0)
{
  <p>There are no stylists.</p>
}
<ul>
  @foreach(var stylist in Model)
  {
    <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a> | | <a href="/stylist/edit/@stylist.GetId()">Edit</a></li>
  }
</ul>
<h4><a href="/stylists/new">Add a new stylist</a></h4>
<h4><a href="/">Return home</a></h4>

<form action="/stylists/delete" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Clear all stylists</button>
</form>
